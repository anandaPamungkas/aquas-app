<%- include('partials/header') %>
    <div class="container notification-detail body">

        <div class="main_container">
            <div class="col-md-3 left_col">
                <%- include('partials/sidebar-menu') %>
            </div>

            <%- include('partials/top-navigation') %>
                <div class="right_col" role="main">
                    <div class="page-title">
                        <div class="title_left">
                            <h3>Notifikasi Detail</h3>
                        </div>
                    </div>
                    <div class="clearfix"></div>

                    <!--Start notification detail content-->
                    <div class="row notification_content_container">

                        <div class="col-md-12 col-sm-12 ">
                            <div class="dashboard_graph notification_content_wrapper">
                                <%
                                    var raw_date = String(item[0].tanggal),
                                        date = raw_date.split(" ")  
                                    %>
                                    <div class="row x_title">
                                        <div class="col-md-6">
                                            <h3>
                                                <%= item[0].subject %>
                                            </h3>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="pull-right">
                                                <i class="fa fa-calendar"></i>
                                                <span>
                                                <%= date[2]; %>
                                                <%= date[1]; %>
                                                <%= date[3]; %>, 
                                            </span>
                                                <span>Pukul : 
                                                    <%= item[0].waktu %>
                                                    </span> <b class="caret"></b>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12 notification-full-description">
                                        <%= item[0].deskripsi %>
                                    </div>
                                    <div class="clearfix"></div>
                            </div>
                        </div>

                        <br />
                    </div>
                    <!--End notification detail content-->
                    <br />
                </div>

                <%- include('partials/footer') %>